@{
    ViewData["Title"] = "Editar Especialidades del Doctor";
    var doctor = ViewBag.Doctor as scg_clinicasur.Models.Usuario;
    var todasEspecialidades = ViewBag.TodasEspecialidades as List<scg_clinicasur.Models.Especialidad>;
    var especialidadesAsignadas = ViewBag.EspecialidadesAsignadas as List<int>;
}

<div class="container">
    <h1 class="my-4 text-center">Editar Especialidades de @doctor.nombre @doctor.apellido</h1>

    <form asp-action="Editar" method="post">
        <input type="hidden" name="id" value="@doctor.id_usuario" />

        <div class="mb-3">
            <label class="form-label">Especialidades</label>
            <div>
                @foreach (var especialidad in todasEspecialidades)
                {
                    <div class="form-check form-check-inline">
                        <input type="checkbox"
                               class="form-check-input"
                               name="EspecialidadesSeleccionadas"
                               value="@especialidad.IdEspecialidad"
                        @(especialidadesAsignadas.Contains(especialidad.IdEspecialidad) ? "checked" : "") />
                        <label class="form-check-label">
                            @especialidad.NombreEspecialidad
                        </label>
                    </div>
                }
            </div>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Guardar Cambios
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Volver
        </a>
    </form>
</div>