@{
    ViewData["Title"] = "Listado de Usuarios";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/site.css">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <header>
        <h1>@ViewData["Title"]</h1>
        <nav>
            <div class="header-buttons">
                <a asp-action="Crear" class="button">Crear Usuario</a>
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        Filtrar por Rol
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="checkDoctor">
                                <label class="form-check-label" for="checkDoctor">
                                    Doctor
                                </label>
                            </div>
                        </li>
                        <li>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="checkAsistenteMedico">
                                <label class="form-check-label" for="checkAsistenteMedico">
                                    Asistente Médico
                                </label>
                            </div>
                        </li>
                        <li>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="checkAsistenteLimpieza">
                                <label class="form-check-label" for="checkAsistenteLimpieza">
                                    Asistente de Limpieza
                                </label>
                            </div>
                        </li>
                        <li>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="checkPaciente">
                                <label class="form-check-label" for="checkPaciente">
                                    Paciente
                                </label>
                            </div>
                        </li>
                        <li><hr class="dropdown-divider"></li> <!-- Línea divisoria -->
                        <li>
                            <button class="btn btn-secondary w-100" id="confirmFilter">Confirmar</button>
                        </li>
                        <li>
                            <button class="btn btn-secondary w-100" id="resetFilter">Resetear Filtro</button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Username</th>
                    <th>Rol</th>
                    <th>Email</th>
                    <th>Acciones</th>
                </tr>
