@model scg_clinicasur.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<h2>@Model.nombre @Model.apellido</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.nombre @Model.apellido</dd>

        <dt class="col-sm-2">Correo</dt>
        <dd class="col-sm-10">@Model.correo</dd>

        <dt class="col-sm-2">Teléfono</dt>
        <dd class="col-sm-10">@Model.telefono</dd>

        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@Model.roles.nombre_rol</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Model.estado</dd>

        <dt class="col-sm-2">Fecha de Registro</dt>
        <dd class="col-sm-10">@Model.fecha_registro.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Contraseña</dt>
        <dd class="col-sm-10">******** (No se muestra por seguridad)</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-primary">Volver al Listado</a>
<a asp-action="Editar" asp-route-id="@Model.id_usuario" class="btn btn-warning">Editar</a>
<a asp-action="Eliminar" asp-route-id="@Model.id_usuario" class="btn btn-danger">Eliminar</a>