@model scg_clinicasur.Models.Contabilidad

@{
    ViewData["Title"] = "Registrar Gasto";
}

<div class="container mt-5">
    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-danger">
            <i class="bi bi-wallet2"></i> @ViewData["Title"]
        </h1>
        <p class="lead text-muted">Registra un nuevo gasto y mantén el control de tu contabilidad.</p>
    </div>

    <!-- Formulario -->
    <div class="card shadow-lg border-0">
        <div class="card-body p-4">
            <form asp-action="RegistrarSalida" method="post">
                <div class="row g-4">
                    <!-- Concepto del Gasto -->
                    <div class="col-md-12">
                        <label for="Concepto" class="form-label fw-bold">Concepto del Gasto</label>
                        <input asp-for="Concepto" class="form-control" placeholder="Ej. Compra de material, mantenimiento, etc." />
                        <span asp-validation-for="Concepto" class="text-danger"></span>
                    </div>

                    <!-- Monto del Gasto -->
                    <div class="col-md-12">
                        <label for="Monto" class="form-label fw-bold">Monto (₡)</label>
                        <input asp-for="Monto" type="number" step="0.01" class="form-control" placeholder="Ej. 15000.00" />
                        <span asp-validation-for="Monto" class="text-danger"></span>
                    </div>
                </div>

                <!-- Campo oculto para forzar el Tipo a "Gasto" -->
                <input asp-for="Tipo" type="hidden" value="Gasto" />

                <!-- Botones de Acción -->
                <div class="d-flex justify-content-center gap-3 mt-4">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-save"></i> Registrar Gasto
                    </button>
                    <a asp-action="Historial" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}