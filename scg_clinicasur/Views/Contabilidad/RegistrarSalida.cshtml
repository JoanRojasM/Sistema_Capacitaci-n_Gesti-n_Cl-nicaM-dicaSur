@model scg_clinicasur.Models.Contabilidad

@{
    ViewData["Title"] = "Registrar Gasto";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="RegistrarSalida" method="post">
    <div class="form-group">
        <label for="Concepto">Concepto</label>
        <input asp-for="Concepto" class="form-control" />
        <span asp-validation-for="Concepto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Monto">Monto</label>
        <input asp-for="Monto" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <!-- Campo oculto para forzar que el Tipo sea siempre "Gasto" -->
    <input asp-for="Tipo" type="hidden" value="Gasto" />

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Historial" class="btn btn-secondary">Cancelar</a>
</form>