@{
    ViewBag.Title = "Gestión de Recursos de Capacitación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>Gestión de Recursos de Capacitación</h2>

    <div class="row mt-4">
        <div class="col-md-6">
            <h4>Subir Materiales Específicos</h4>
            <form method="post" action="/Admin/UploadMaterial" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="materialName" class="form-label">Nombre del Material</label>
                    <input type="text" class="form-control" id="materialName" name="materialName" required>
                </div>
                <div class="mb-3">
                    <label for="materialFile" class="form-label">Archivo del Material</label>
                    <input type="file" class="form-control" id="materialFile" name="materialFile" required>
                </div>
                <button type="submit" class="btn btn-success">Subir Material</button>
            </form>
        </div>

        <div class="col-md-6">
            <h4>Subir Videos de Capacitación</h4>
            <form method="post" action="/Admin/UploadVideo" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="videoName" class="form-label">Nombre del Video</label>
                    <input type="text" class="form-control" id="videoName" name="videoName" required>
                </div>
                <div class="mb-3">
                    <label for="videoFile" class="form-label">Archivo del Video</label>
                    <input type="file" class="form-control" id="videoFile" name="videoFile" required>
                </div>
                <button type="submit" class="btn btn-success">Subir Video</button>
            </form>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <h4>Materiales Subidos</h4>
            <!-- Aquí iría un listado de materiales subidos con opciones de edición y eliminación -->
        </div>

        <div class="col-md-6">
            <h4>Videos Subidos</h4>
            <!-- Aquí iría un listado de videos subidos con opciones de edición y eliminación -->
        </div>
    </div>
</div>
