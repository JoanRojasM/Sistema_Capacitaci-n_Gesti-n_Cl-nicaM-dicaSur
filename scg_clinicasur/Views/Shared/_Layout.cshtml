@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinica Médica Sur</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/scg_clinicasur.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Clinica Médica del Sur</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (!(ViewContext.RouteData.Values["controller"].ToString() == "Account" && ViewContext.RouteData.Values["action"].ToString() == "Login"))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            @{
                                var userRole = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
                            }

                            @if (userRole == "administrador")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Capacitaciones" asp-action="Index">Capacitaciones</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="" asp-controller="Evaluaciones" asp-action="Index">Evaluaciones</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="#" asp-controller="Citas" asp-action="Index">Citas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="#" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="#" asp-controller="Contabilidad" asp-action="Historial">Contabilidad</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="#" asp-controller="Expedientes" asp-action="Index">Expedientes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-area="#" asp-controller="Paciente" asp-action="ListadoPacientes">Pacientes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Account" asp-action="Logout">Cerrar Sesión</a>
                                </li>
                            }
                            else if (userRole == "doctor")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Doctor" asp-action="Index">Menu</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Citas" asp-action="Index">Citas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Citas" asp-action="Calendario">Calendario</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Usuarios" asp-action="Index">Agregar Paciente</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Expedientes" asp-action="Index">Expedientes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Account" asp-action="Logout">Cerrar Sesión</a>
                                </li>
                            }
                            else if (userRole == "paciente")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Paciente" asp-action="Index">Menu</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Account" asp-action="Logout">Cerrar Sesión</a>
                                </li>
                            }
                            else if (userRole == "asistente_limpieza")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="AsistenteLimpieza" asp-action="Index">Menu</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Account" asp-action="Logout">Cerrar Sesión</a>
                                </li>
                            }
                            else if (userRole == "asistente_medico")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="AsistenteMedico" asp-action="Index">Menu</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-light" asp-controller="Account" asp-action="Logout">Cerrar Sesión</a>
                                </li>
                            }
                        </ul>

                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Notificaciones" asp-action="Index">
                                    <i class="bi bi-bell-fill" style="font-size: 1.5rem;"></i>
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted">
        <div class="container">
            &copy; 2024 - scg_clinicasur - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
