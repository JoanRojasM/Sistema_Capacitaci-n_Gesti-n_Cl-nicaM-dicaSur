@model scg_clinicasur.Models.ResultadosLaboratorio

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resultados de Laboratorio Recientes</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2>Resultados de Laboratorio Recientes</h2>

        @if (Model != null)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Fecha de Prueba</th>
                        <th>Tipo de Prueba</th>
                        <th>Resultado</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.FechaPrueba.ToString("yyyy-MM-dd")</td>
                        <td>@Model.TipoPrueba</td>
                        <td>@Model.Resultado</td>
                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                No se encontraron resultados recientes de laboratorio.
            </div>
        }

        <a href="@Url.Action("Index", "Expedientes")" class="btn btn-secondary mt-3">Volver al Expediente</a>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>