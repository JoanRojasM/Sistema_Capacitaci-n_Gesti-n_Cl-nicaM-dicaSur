@model scg_clinicasur.Models.ResultadosLaboratorio

@{
    ViewData["Title"] = "Crear Resultado de Laboratorio";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 30px;
        }

        h1 {
            color: #0d6efd;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-primary {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
                border-color: #0b5ed7;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5c636a;
                border-color: #565e64;
            }
    </style>
</head>
<body>
    <!-- Contenedor principal -->
    <div class="container">
        <!-- Título -->
        <h1><i class="bi bi-file-earmark-medical"></i> @ViewData["Title"]</h1>

        <!-- Formulario -->
        <form asp-action="CrearResultadosLaboratorio" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" name="idExpediente" value="@ViewBag.IdExpediente" />

            <!-- Cargar archivo PDF -->
            <div class="mb-4">
                <label for="archivoPDF" class="form-label fw-semibold">
                    <i class="bi bi-file-earmark-arrow-up"></i> Subir Archivo PDF
                </label>
                <input type="file" class="form-control" id="archivoPDF" name="archivoPDF" accept=".pdf" required />
                <div class="form-text text-muted">Solo se permiten archivos en formato PDF.</div>
            </div>

            <!-- Botones de acción -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-save"></i> Guardar Resultado
                </button>
                <a href="@Url.Action("VerHistorialResultados", "Expedientes", new { idExpediente = ViewBag.IdExpediente })" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>