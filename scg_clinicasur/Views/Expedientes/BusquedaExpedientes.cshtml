@{
    ViewData["Title"] = "Búsqueda de Expedientes";
}

<h1>@ViewData["Title"]</h1>

<form>
    <div class="mb-3">
        <label for="busqueda" class="form-label">Buscar por nombre o ID</label>
        <input type="text" class="form-control" id="busqueda" />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

<h2>Resultados de la búsqueda</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre del Paciente</th>
            <th>Fecha de Nacimiento</th>
            <th>Última Consulta</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>001</td>
            <td>Juan Domínguez</td>
            <td>1980-05-15</td>
            <td>2024-07-20</td>
            <td>
                <a href="@Url.Action("DetallesConsulta", "Expedientes", new { id = 001 })" class="btn btn-primary">Ver Detalles</a>
            </td>
        </tr>
    </tbody>
</table>
