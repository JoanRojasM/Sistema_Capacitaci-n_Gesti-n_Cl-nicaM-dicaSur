@model IEnumerable<scg_clinicasur.Models.Evaluacion>

@{
    ViewData["Title"] = "Mis Evaluaciones";
}

<h2 class="mb-4 text-center">@ViewData["Title"]</h2>

<table class="table table-striped table-hover table-bordered text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Tiempo de Prueba</th>
            <th>Archivo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var evaluacion in Model)
            {
                <tr>
                    <td>@evaluacion.nombre</td>
                    <td>@evaluacion.descripcion</td>
                    <td>@evaluacion.tiempo_prueba</td>
                    <td>
                        <div class="d-grid gap-2 d-md-flex justify-content-center">
                            <a href="@Url.Action("Detalles", "Evaluaciones", new { id = evaluacion.id_evaluacion })" class="btn btn-sm btn-info me-2">
                                <i class="bi bi-eye"></i> Detalles
                            </a>
                            <a href="@Url.Action("Descargar", "Evaluaciones", new { id = evaluacion.id_evaluacion })" class="btn btn-sm btn-success">
                                <i class="bi bi-download"></i> Descargar
                            </a>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-muted text-center">No se encontraron evaluaciones registradas.</td>
            </tr>
        }
    </tbody>
</table>