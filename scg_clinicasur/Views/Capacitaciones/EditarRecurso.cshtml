@model scg_clinicasur.Models.RecursosAprendizaje
@{
    ViewData["Title"] = "Editar Recurso de Aprendizaje";
}

<div class="container mt-5">
    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-primary">Editar Recurso de Aprendizaje</h1>
        <p class="lead text-muted">Modifique los datos del recurso de aprendizaje seleccionado.</p>
    </div>

    <!-- Formulario -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <form asp-action="EditarRecurso" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="id_recurso" />

                <div class="row mb-3">
                    <!-- Título -->
                    <div class="col-md-6">
                        <label asp-for="titulo" class="form-label fw-bold">Título del Recurso</label>
                        <input asp-for="titulo" class="form-control" placeholder="Ingrese el título del recurso" />
                        <span asp-validation-for="titulo" class="text-danger"></span>
                    </div>

                    <!-- Capacitación -->
                    <div class="col-md-6">
                        <label asp-for="id_capacitacion" class="form-label fw-bold">Capacitación</label>
                        <select asp-for="id_capacitacion" class="form-select" asp-items="ViewBag.Capacitaciones">
                            <option value="">Seleccione una capacitación</option>
                        </select>
                        <span asp-validation-for="id_capacitacion" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <!-- Archivo -->
                    <div class="col-md-6">
                        <label asp-for="archivo" class="form-label fw-bold">Archivo (Opcional)</label>
                        <input asp-for="archivo" type="file" class="form-control" />
                        <span asp-validation-for="archivo" class="text-danger"></span>
                        @if (!string.IsNullOrEmpty(Model.archivo))
                        {
                            <p class="mt-2">
                                <strong>Archivo actual:</strong>
                                <a href="@Model.archivo" target="_blank" class="text-primary fw-bold">
                                    <i class="bi bi-file-earmark"></i> Ver archivo
                                </a>
                            </p>
                        }
                    </div>

                    <!-- Enlace -->
                    <div class="col-md-6">
                        <label asp-for="enlace" class="form-label fw-bold">Enlace (Opcional)</label>
                        <input asp-for="enlace" class="form-control" placeholder="Pegue el enlace del recurso" />
                        <span asp-validation-for="enlace" class="text-danger"></span>
                        @if (!string.IsNullOrEmpty(Model.enlace))
                        {
                            <p class="mt-2">
                                <strong>Enlace actual:</strong>
                                <a href="@Model.enlace" target="_blank" class="text-primary fw-bold">
                                    <i class="bi bi-link-45deg"></i> @Model.enlace
                                </a>
                            </p>
                        }
                    </div>
                </div>

                <!-- Botones -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg me-2">
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Recursos" asp-route-id="@Model.id_capacitacion" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}