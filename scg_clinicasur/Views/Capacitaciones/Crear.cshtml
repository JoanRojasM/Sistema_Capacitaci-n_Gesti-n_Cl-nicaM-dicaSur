@model scg_clinicasur.Models.Capacitacion
@{
    ViewData["Title"] = "Crear Capacitación";
}

<div class="container mt-5">
    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-primary">@ViewData["Title"]</h1>
        <p class="lead text-muted">Complete la información para registrar una nueva capacitación.</p>
    </div>

    <!-- Formulario -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <form asp-action="Crear" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label asp-for="titulo" class="form-label fw-bold">Título:</label>
                    <input asp-for="titulo" class="form-control" placeholder="Ingrese el título de la capacitación" />
                    <span asp-validation-for="titulo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="descripcion" class="form-label fw-bold">Descripción:</label>
                    <textarea asp-for="descripcion" class="form-control" rows="4" placeholder="Ingrese una descripción detallada"></textarea>
                    <span asp-validation-for="descripcion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="duracion" class="form-label fw-bold">Duración:</label>
                    <input asp-for="duracion" type="text" class="form-control" placeholder="Ej. 2 horas, 3 días, etc." />
                    <span asp-validation-for="duracion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="id_usuario" class="form-label fw-bold">Usuario Asignado:</label>
                    <select asp-for="id_usuario" class="form-select" asp-items="ViewBag.Usuarios">
                        <option value="">Seleccione un usuario</option>
                    </select>
                    <span asp-validation-for="id_usuario" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="estado" class="form-label fw-bold">Estado:</label>
                    <select asp-for="estado" class="form-select">
                        <option value="">Seleccione un estado</option>
                        <option value="Pendiente">Pendiente</option>
                        <option value="Completada">Completada</option>
                    </select>
                    <span asp-validation-for="estado" class="text-danger"></span>
                </div>

                <!-- Botones -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}