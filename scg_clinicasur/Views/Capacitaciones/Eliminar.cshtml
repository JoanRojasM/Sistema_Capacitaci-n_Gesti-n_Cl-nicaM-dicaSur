@model scg_clinicasur.Models.Capacitacion

@{
    ViewData["Title"] = "Eliminar Capacitacion";
}

<h2>¿Estás seguro de que deseas eliminar esta capacitación?</h2>

<div class="alert alert-danger">
    Esta acción no se puede deshacer.
</div>

<div>
    <h4>Detalles de la capacitación</h4>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.titulo</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.descripcion</dd>

        <dt class="col-sm-2">Duración</dt>
        <dd class="col-sm-10">@Model.duracion</dd>

        <dt class="col-sm-2">Usuario Responsable</dt>
        <dd class="col-sm-10">@Model.Usuario.nombre @Model.Usuario.apellido</dd>

        <dt class="col-sm-2">Archivo</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.archivo))
            {
                <a href="@Url.Content("~/uploads/" + Model.archivo)" target="_blank">Ver archivo</a>
            }
            else
            {
                <p>No disponible</p>
            }
        </dd>

        <dt class="col-sm-2">Enlace</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.enlace))
            {
                <a href="@Model.enlace" target="_blank">Ir al enlace</a>
            }
            else
            {
                <p>No disponible</p>
            }
        </dd>
    </dl>
</div>

<form asp-action="Eliminar" method="post">
    <input type="hidden" asp-for="id_capacitacion" />
    <div class="form-group">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
