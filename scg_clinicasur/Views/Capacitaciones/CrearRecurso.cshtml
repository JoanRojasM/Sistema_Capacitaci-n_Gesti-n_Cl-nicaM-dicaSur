@model scg_clinicasur.Models.RecursosAprendizaje
@{
    ViewData["Title"] = "Crear Recurso de Aprendizaje";
}

<div class="container mt-5">
    <!-- Encabezado -->
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold text-primary">Crear Recurso de Aprendizaje</h1>
        <p class="lead text-muted">Complete la información del recurso para agregarlo a una capacitación.</p>
    </div>

    <!-- Formulario -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <form asp-action="CrearRecurso" method="post" enctype="multipart/form-data">
                <div class="row mb-3">
                    <!-- Título -->
                    <div class="col-md-6">
                        <label asp-for="titulo" class="form-label fw-bold">Título del Recurso</label>
                        <input asp-for="titulo" class="form-control" placeholder="Ingrese el título del recurso" />
                        <span asp-validation-for="titulo" class="text-danger"></span>
                    </div>

                    <!-- Capacitación -->
                    <div class="col-md-6">
                        <label asp-for="id_capacitacion" class="form-label fw-bold">Capacitación</label>
                        <select asp-for="id_capacitacion" class="form-select" asp-items="ViewBag.Capacitaciones">
                            <option value="">Seleccione una capacitación</option>
                        </select>
                        <span asp-validation-for="id_capacitacion" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <!-- Archivo -->
                    <div class="col-md-6">
                        <label asp-for="archivo" class="form-label fw-bold">Archivo</label>
                        <input asp-for="archivo" type="file" class="form-control" />
                        <span asp-validation-for="archivo" class="text-danger"></span>
                    </div>

                    <!-- Enlace -->
                    <div class="col-md-6">
                        <label asp-for="enlace" class="form-label fw-bold">Enlace (opcional)</label>
                        <input asp-for="enlace" class="form-control" placeholder="Pegue el enlace del recurso" />
                        <span asp-validation-for="enlace" class="text-danger"></span>
                    </div>
                </div>

                <!-- Botones de acción -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success btn-lg me-2">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}