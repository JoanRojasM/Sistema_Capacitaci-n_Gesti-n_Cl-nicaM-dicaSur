@model scg_clinicasur.Models.Capacitacion

@{
    ViewData["Title"] = "Detalles de Capacitación";
}

<h1>Detalles de Capacitación</h1>

<div class="form-group">
    <label><strong>ID de Capacitación:</strong></label>
    <p>@Model.id_capacitacion</p>
</div>

<div class="form-group">
    <label><strong>Título:</strong></label>
    <p>@Model.titulo</p>
</div>

<div class="form-group">
    <label><strong>Descripción:</strong></label>
    <p>@Model.descripcion</p>
</div>

<div class="form-group">
    <label><strong>Duración:</strong></label>
    <p>@(!string.IsNullOrEmpty(Model.duracion) ? Model.duracion : "No especificada")</p>
</div>

<div class="form-group">
    <label><strong>Usuario Asignado:</strong></label>
    <p>@(Model.Usuario != null ? Model.Usuario.nombre + " " + Model.Usuario.apellido : "No asignado")</p>
</div>

<div class="form-group">
    <label><strong>Rol del Usuario:</strong></label>
    <p>@(Model.Usuario != null && Model.Usuario.roles != null ? Model.Usuario.roles.nombre_rol : "No asignado")</p>
</div>

<div class="form-group">
    <label><strong>Fecha de Creación:</strong></label>
    <p>@Model.fecha_creacion.ToString("dd/MM/yyyy")</p>
</div>

<div class="form-group">
    <label><strong>Archivo:</strong></label>
    @if (!string.IsNullOrEmpty(Model.archivo))
    {
        <p><a href="@Url.Content("~/Archivos/" + Model.archivo)" target="_blank">@Model.archivo</a></p>
    }
    else
    {
        <p>No especificado</p>
    }
</div>

<div class="form-group">
    <label><strong>Enlace:</strong></label>
    @if (!string.IsNullOrEmpty(Model.enlace))
    {
        <p><a href="@Model.enlace" target="_blank">Ver enlace</a></p>
    }
    else
    {
        <p>No especificado</p>
    }
</div>

<div class="form-group">
    <label><strong>Estado:</strong></label>
    <p>@(string.IsNullOrEmpty(Model.estado) ? "No especificado" : Model.estado)</p>
</div>

<a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
