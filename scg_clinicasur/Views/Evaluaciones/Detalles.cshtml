@model scg_clinicasur.Models.Evaluacion

@{
    ViewData["Title"] = "Detalles de la Evaluación";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.nombre</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.descripcion</dd>

        <dt class="col-sm-2">Tiempo de Prueba</dt>
        <dd class="col-sm-10">
            @(Model.tiempo_prueba.HasValue ? Model.tiempo_prueba.Value.ToString(@"hh\:mm\:ss") : "No especificado")
        </dd>

        <dt class="col-sm-2">Archivo</dt>
        <dd class="col-sm-10">@Model.archivo</dd>

        <dt class="col-sm-2">Usuario Responsable</dt>
        <dd class="col-sm-10">
            @if (Model.Usuario != null && Model.Usuario.roles != null)
            {
                @($"{Model.Usuario.nombre} {Model.Usuario.apellido} ({Model.Usuario.roles.nombre_rol})")
            }
            else if (Model.Usuario != null)
            {
                @($"{Model.Usuario.nombre} {Model.Usuario.apellido} (Rol no asignado)")
            }
            else
            {
                <span class="text-muted">No asignado</span>
            }
        </dd>

        <dt class="col-sm-2">Fecha de Creación</dt>
        <dd class="col-sm-10">@Model.fecha_creacion.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-primary">Volver al Listado</a>
<a asp-action="Editar" asp-route-id="@Model.id_evaluacion" class="btn btn-warning">Editar</a>
<a asp-action="Eliminar" asp-route-id="@Model.id_evaluacion" class="btn btn-danger">Eliminar</a>