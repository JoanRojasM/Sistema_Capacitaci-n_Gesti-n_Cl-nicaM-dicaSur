@model scg_clinicasur.Models.Evaluacion

@{
    ViewData["Title"] = "Eliminar Evaluación";
}

<h2>¿Estás seguro de que deseas eliminar esta evaluación?</h2>

<div class="alert alert-danger">
    Esta acción no se puede deshacer.
</div>

<div>
    <h4>Detalles de la evaluación</h4>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.nombre</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.descripcion</dd>

        <dt class="col-sm-2">Tiempo de prueba</dt>
        <dd class="col-sm-10">@Model.tiempo_prueba</dd>

        <dt class="col-sm-2">Archivo</dt>
        <dd class="col-sm-10">@Model.archivo</dd>

        <dt class="col-sm-2">Usuario Responsable</dt>
        <dd class="col-sm-10">@Model.Usuario.nombre</dd>
    </dl>
</div>

<form asp-action="Eliminar" method="post">
    <input type="hidden" asp-for="id_evaluacion" />
    <div class="form-group">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
