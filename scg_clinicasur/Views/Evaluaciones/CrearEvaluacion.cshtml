@model scg_clinicasur.Models.Evaluacion
@{
    ViewData["Title"] = "Crear Evaluacion";
    var userRole = Context.Session.GetString("UserRole");
}
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/site.css">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <header>
        <h1>@ViewData["Title"]</h1>
        <nav>
            <a asp-action="Evaluaciones" class="button">Volver al Listado</a>
        </nav>
    </header>
    <main>
        <form method="post" asp-action="CrearEvaluacion" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="nombre">Nombre:</label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="descripcion">Descripción:</label>
                <textarea asp-for="descripcion" class="form-control"></textarea>
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tiempo_prueba">Tiempo de Prueba:</label>
                <input asp-for="tiempo_prueba" class="form-control" type="time" />
                <span asp-validation-for="tiempo_prueba" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="archivo">Archivo:</label>
                <input asp-for="archivo" class="form-control" type="file" />
                <span asp-validation-for="archivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="id_usuario">Asignar a:</label>
                <select asp-for="id_usuario" class="form-control" asp-items="ViewBag.Usuarios"></select>
                <span asp-validation-for="id_usuario" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </main>
</body>
</html>