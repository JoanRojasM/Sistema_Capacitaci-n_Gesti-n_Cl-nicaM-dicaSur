@model scg_clinicasur.Models.Evaluacion

@{
    ViewData["Title"] = "Editar Evaluación";
}

<h2>Editar Evaluación</h2>

<form asp-action="Editar" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="nombre" class="control-label"></label>
        <input asp-for="nombre" class="form-control" />
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="descripcion" class="control-label"></label>
        <textarea asp-for="descripcion" class="form-control"></textarea>
        <span asp-validation-for="descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="tiempo_prueba" class="control-label"></label>
        <input asp-for="tiempo_prueba" class="form-control" type="time" />
        <span asp-validation-for="tiempo_prueba" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="archivo" class="control-label">Archivo Actual: @Model.archivo</label>
        <input asp-for="archivo" class="form-control" type="file" />
        <span asp-validation-for="archivo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="id_usuario" class="control-label">Usuario Responsable</label>
        <select asp-for="id_usuario" class="form-control" asp-items="ViewBag.Usuarios"></select>
        <span asp-validation-for="id_usuario" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
