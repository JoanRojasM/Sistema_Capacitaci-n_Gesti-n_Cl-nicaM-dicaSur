@model scg_clinicasur.Models.Evaluacion

<h1>Editar Evaluación</h1>

<form asp-action="Editar" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" required />
    </div>
    <div class="form-group">
        <label for="descripcion">Descripción</label>
        <textarea class="form-control" id="descripcion" name="descripcion" required></textarea>
    </div>
    <div class="form-group">
        <label for="tiempo_prueba">Tiempo de prueba</label>
        <input type="text" class="form-control" id="tiempo_prueba" name="tiempo_prueba" required />
    </div>
    <div class="form-group">
        <label for="archivo">Archivo</label>
        <input type="file" class="form-control" id="archivo" name="archivo" />
    </div>
    <div class="form-group">
        <label for="id_usuario">Usuario</label>
        <select asp-for="id_usuario" class="form-control" asp-items="ViewBag.Usuarios"></select>
    </div>
    <div class="form-group">
        <label for="id_capacitacion">Capacitación</label>
        <select asp-for="id_capacitacion" class="form-control" asp-items="ViewBag.Capacitaciones"></select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Crear Evaluación</button>
    </div>
</form>
