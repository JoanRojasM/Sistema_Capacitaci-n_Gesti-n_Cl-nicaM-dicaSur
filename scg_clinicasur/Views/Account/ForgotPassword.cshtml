@{
    ViewBag.Title = "Recuperar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .recover-container {
            margin-top: 8%;
            width: 500px; /* Ancho consistente */
            background-color: #ffffff;
            padding: 3rem;
            border-radius: 12px;
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
        }

            .recover-container h2 {
                color: #0d6efd;
                text-align: center;
                font-weight: bold;
                font-size: 1.8rem;
                margin-bottom: 1.5rem;
            }

        .btn-success {
            background-color: #198754;
            border-color: #198754;
            font-size: 1.1rem;
            padding: 10px;
        }

            .btn-success:hover {
                background-color: #157347;
                border-color: #146c43;
            }

        .btn-secondary {
            background-color: #0d6efd;
            border-color: #0d6efd;
            font-size: 1.1rem;
        }

            .btn-secondary:hover {
                background-color: #0b5ed7;
                border-color: #0b5ed7;
            }

        .alert {
            margin-top: 10px;
            font-size: 0.95rem;
        }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center">
        <div class="recover-container">
            <h2><i class="bi bi-envelope"></i> Recuperar Contraseña</h2>

            <!-- Mensajes de error o éxito -->
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-circle"></i> @ViewBag.ErrorMessage
                </div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
            {
                <div class="alert alert-success" role="alert">
                    <i class="bi bi-check-circle"></i> @ViewBag.SuccessMessage
                </div>
            }

            <!-- Formulario -->
            <form method="post" action="/Account/ForgotPassword">
                <div class="form-floating mb-4">
                    <input type="email" class="form-control" id="floatingInputEmail" name="correo" placeholder="Ingresa tu correo electrónico" required>
                    <label for="floatingInputEmail"><i class="bi bi-envelope-at"></i> Correo Electrónico</label>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-send"></i> Enviar
                    </button>
                    <a href="/Account/Login" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver al Inicio de Sesión
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>